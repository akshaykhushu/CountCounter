<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Team A"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/editTextTeamAscore"
                android:layout_gravity="center_horizontal"
                android:textSize="80sp"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:text="+3 Points"
                android:id="@+id/buttonTeamA3Points"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@android:color/holo_orange_dark"
                android:onClick="teamA3Points"/>

            <Button
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:text="+2 Points"
                android:id="@+id/buttonTeamA2Points"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:onClick="teamA2Points"
                android:background="@android:color/holo_orange_dark"/>

            <Button
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:text="Free Throw"
                android:id="@+id/buttonTeamAFreeThrow"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:onClick="teamAFreeThrow"
                android:background="@android:color/holo_orange_dark"/>


        </LinearLayout>

        <Button
            android:layout_width="1dp"
            android:layout_height="345dp"
            android:background="@android:color/holo_blue_dark"
            android:layout_marginTop="15dp"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Team B"
                android:id="@+id/textView66"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/editTextTeamBscore"
                android:layout_gravity="center_horizontal"
                android:textSize="80sp"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:text="+3 Points"
                android:id="@+id/buttonTeamB3Points"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:onClick="teamB3Points"
                android:background="@android:color/holo_orange_dark"/>

            <Button
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:text="+2 Points"
                android:id="@+id/buttonTeamB2Points"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:onClick="teamB2Points"
                android:background="@android:color/holo_orange_dark"/>

            <Button
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:text="Free Throw"
                android:id="@+id/buttonTeamBFreeThrow"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:onClick="teamBFreeThrow"
                android:background="@android:color/holo_orange_dark"/>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Reset"
            android:id="@+id/buttonReset"
            android:layout_gravity="center"
            android:onClick="resetScore"
            android:background="@android:color/holo_orange_dark"/>

    </LinearLayout>

</LinearLayout>
</ScrollView>